<div class="container">
  <div class="poster">
    <%= link_to list_path(@list), method: :delete, data: { confirm: "Hey hey, stop right here! You might not want to do this." }, class: "poster-trash text-light h4" do  %>
      <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %>
    <%= image_tag @list.photo, alt: "poster" %>
    <p class="list-name h4 text-center mx-auto py-2 bg-success w-75">
      <strong>
        <%= @list.name %>
      </strong>
    </p>
  </div>
  <br>
  <h4 class="mt-5 text-center text-monospace"><strong>Bookmarks</strong></h4>
  <div class="row my-3">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 m-sm-6 mx-auto">
        <div class="card-hello  my-5">
          <span class= "rating"><%= bookmark.movie.rating %> <i class="fa fa-star" aria-hidden="true"></i></span>
          <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
          <div class="card-hello-info">
            <h4><strong><%= bookmark.movie.title %></strong></h4>
            <p><%= bookmark.comment %></p>
          </div>  
          <div>
            <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, bookmark_path(bookmark), class: "trash text-danger", method: :delete, data: { confirm: "Are you sure about it?" }  %>
          </div>
        </div>
      </div>    
    <% end %>
    <div class="col-md-4 m-sm-6 mx-auto">
        <div class="card-hello d-flex align-items-center justify-content-center  my-5">
          <span class="plus" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">
            <i class="fas fa-plus"></i>
          </span>
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">New Bookmark</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= simple_form_for [@list, @bookmark] do |f| %>
                    <%= f.input :comment %>
                    <%= f.association :movie %>
                    <%= f.submit "Add a bookmark", class: "btn btn-primary btn-lg btn-block"%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>    
  </div>
</div>