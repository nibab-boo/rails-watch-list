<div class="container">
  <div class="poster">
    <span data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">
      <i class="fas fa-plus"></i>
    </span>
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Bookmark</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [@list, @bookmark] do |f| %>
            <%= f.input :comment %>
            <%= f.association :movie %>
            <%= f.submit "Add a bookmark", class: "btn btn-primary btn-lg btn-block"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <%= image_tag @list.movies.first.poster_url, alt: "poster" %>
    <p class="list-name h4 text-center mx-auto py-2 bg-success w-75">
      <strong>
        <%= @list.name %>
      </strong>
    </p>
  </div>
  <br>
  <h4 class="mt-5 text-center text-monospace"><strong>Bookmarks</strong></h4>
  <div class="row my-3">
    <% @list.bookmarks.each do |thing| %>
      <div class="col-3 mx-auto my-3">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card-hello  my-3">
            <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
            <div class="card-hello-info">
              <h4><strong><%= bookmark.movie.title %></strong></h4>
              <p><%= bookmark.comment[..30] + "..." %></p>
              <div>
                <%#= link_to ,  %>
              </div>
            </div>  
          </div>
        <% end %>
      </div>
    <% end %>
    
  </div>
</div>