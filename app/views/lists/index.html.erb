<div class="cinema-banner">
</div>
<div class="container">
  <h3 class="text-center text-muted mt-3">Our Movie Lists</h3>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-md-4  my-5">
        <div class="card border border-0 bg-transparent" style="width: 18rem;">
          <div class="image-box">
            <% unless list.movies.empty? %>
              <% list.movies.each_with_index do |movie, index| %>
                <% break if index.equal? 2 %>
                <%= image_tag movie.poster_url, alt: "image", class: "card-img-top movie-circle image" %> 
              <% end %>
            <% end %>
            <% if list.photo.attached? %>
              <%= cl_image_tag list.photo.key, alt: "image", class: "card-img-top image" %>
            <% else %>
              <%= image_tag "https://source.unsplash.com/1600x900/?" + list.name, alt: "image", class: "card-img-top image" %>
            <% end %>
          </div>
          <%= link_to list_path(list), class: "circular-button" do %>
            <div class="list-title mt-n5"><span class="mt-n5 mb-1"><%= list.name %></span></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


