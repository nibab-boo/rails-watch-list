<div class="container">
  <h3 class="text-center text-muted my-3">Our Movie Lists</h3>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-md-4  my-5">
        <div class="card border border-0 bg-transparent" style="width: 18rem;">
          <div class="image-box">
            <% unless list.movies.empty? %>
              <% list.movies.each_with_index do |thing, index| %>
                <% break if index.equal? 2 %>
                <%= image_tag list.movies.sample.poster_url, alt: "image", class: "card-img-top image" %> 
              <% end %>
            <% end %>
            <% if list.photo.attached? %>
              <%= image_tag list.photo, alt: "image", class: "card-img-top image" %>
            <% else %>
              <%= image_tag 'https://picsum.photos/500/300?random=1', alt: "image", class: "card-img-top image" %>
            <% end %>
          </div>
          <%= link_to list_path(list), class: "circular-button" do %>
            <div class="list-title mt-n5"><span class="mt-n5 mb-1"><%= list.name %></span></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>


